{
  "manifest_version": 3,
  "name": "Shareload",
  "version": "0.0.1",
  "description": "Share file download links to a remote server!",
  "icons": {
    "16": "images/rocket-lunch-16.png",
    "32": "images/rocket-lunch-32.png",
    "128": "images/rocket-lunch-128.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "permissions": [
    "downloads", 
    "scripting",
    "storage",
    "offscreen"
  ],
  "action": {
    "default_icon": "images/rocket-lunch-128.png",
    "default_title": "Shareload",
    "default_popup": "index.html"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}
